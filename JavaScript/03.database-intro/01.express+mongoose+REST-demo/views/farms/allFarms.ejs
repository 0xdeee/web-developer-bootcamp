<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Farm</title>
</head>

<body>
  <h1>List of all Farms</h1>

  <table border="1px solid">
    <tr>
      <th>Farm Name</th>
      <th>view</th>
      <th>action</th>
    </tr>
    <% allFarms.forEach(element=> { %>
      <tr>
        <td>
          <%= element.name %>
        </td>
        <td>
          <a href="/farms/<%=element._id%>">click here!</a>
        </td>
        <td>
          <form action="/farms/<%=element._id%>?_method=DELETE" method="post">
            <button>delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
  </table>
  <br><br>
  <a href="/farms/new">add new farm</a>
</body>

</html>